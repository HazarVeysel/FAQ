@model FAQ.Models.Questions
@{
    ViewBag.Title = "Edit Question";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-0">
    <div class="card card-warning card-outline">
        <div class="card-header mt-1">
            <h3 class="card-title">Edit Question</h3>
        </div>
        <!-- /.card-header -->
        @using (Html.BeginForm("EditQuestion", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.Question_ID, new { @class = "form-control" })
    <div class="card-body">
        <div class="form-group">
            @Html.DropDownListFor(x => x.Category_ID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control custom-select" })

        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Question_Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Question_Details, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Answer_Content, new { @class = "form-control", @id = "compose-textarea" })

        </div>

        @Html.HiddenFor(x => x.Create_Date, new { @class = "form-control" })

    </div>
            <!-- /.card-body -->
    <div class="card-footer">
        <div class="float-right">
            <button type="submit" class="btn btn-success"><i class="fas fa-edit"></i> Update Question</button>
        </div>
        <a class="btn btn-danger btn-sm" style="font-size:15px" href="/Home/AdminQuestions">
            <i class="fas fa-backward">
            </i>
            Back
        </a>
    </div>
        }
        <!-- /.card-footer -->
    </div>
</div>

